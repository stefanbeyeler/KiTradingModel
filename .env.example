# Example environment variables for KI Trading Model
# Copy this file to .env and adjust values for your environment

# Service Configuration
SERVICE_HOST=0.0.0.0
SERVICE_PORT=3011
LOG_LEVEL=INFO

# Ollama Configuration (local or remote LLM)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:70b
OLLAMA_NUM_CTX=8192
OLLAMA_NUM_GPU=-1
OLLAMA_NUM_THREAD=14

# TimescaleDB Configuration REMOVED - Using EasyInsight API only
# Direct database access has been disabled in favor of API-based data retrieval

# EasyInsight API Configuration (primary data source)
EASYINSIGHT_API_URL=http://10.1.19.102:3000/api

# RAG Sync Configuration REMOVED - TimescaleDB sync disabled

# FAISS RAG Configuration
FAISS_PERSIST_DIRECTORY=./data/faiss
RAG_COLLECTION_NAME=trading_history

# GPU/Device Settings
FAISS_USE_GPU=0
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=64
USE_HALF_PRECISION=1
NHITS_USE_GPU=0

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Trading Analysis Configuration
DEFAULT_LOOKBACK_DAYS=30
MAX_CONTEXT_DOCUMENTS=10
