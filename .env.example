# Example environment variables for KI Trading Model
# Copy this file to .env and adjust values for your environment

# Service
SERVICE_HOST=0.0.0.0
SERVICE_PORT=3011
LOG_LEVEL=INFO

# Ollama (use remote Ollama server if local not available)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# TimescaleDB
TIMESCALEDB_HOST=localhost
TIMESCALEDB_PORT=5432
TIMESCALEDB_DATABASE=easyinsight
TIMESCALEDB_USER=postgres
TIMESCALEDB_PASSWORD=

# FAISS / Embedding / NHITS
FAISS_USE_GPU=1
EMBEDDING_DEVICE=cuda   # 'cuda' or 'cpu' or 'auto'
EMBEDDING_BATCH_SIZE=64
USE_HALF_PRECISION=1
NHITS_USE_GPU=1

# FAISS persistence
FAISS_PERSIST_DIRECTORY=data/faiss
# TimescaleDB Configuration
TIMESCALEDB_HOST=localhost
TIMESCALEDB_PORT=5432
TIMESCALEDB_DATABASE=easyinsight
TIMESCALEDB_USER=postgres
TIMESCALEDB_PASSWORD=your_password_here

# RAG Sync Configuration
RAG_SYNC_ENABLED=true
RAG_SYNC_INTERVAL_SECONDS=300
RAG_SYNC_BATCH_SIZE=100

# Ollama Configuration (Llama 3.1 70B)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:70b

# FAISS RAG Configuration
FAISS_PERSIST_DIRECTORY=./data/faiss

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Service Configuration
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
LOG_LEVEL=INFO

# Trading Analysis Configuration
DEFAULT_LOOKBACK_DAYS=30
MAX_CONTEXT_DOCUMENTS=10
