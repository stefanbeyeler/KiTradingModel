# ===========================================
# WATCHDOG SERVICE KONFIGURATION
# ===========================================
# Kopiere diese Datei zu .env.watchdog und passe die Werte an

# -------------------------------------------
# TELEGRAM KONFIGURATION
# -------------------------------------------
# Bot-Token von @BotFather (Format: 123456789:AAHxxxxxxxxxxxxxxxxxxxxxxxxxxxxx)
WATCHDOG_TELEGRAM_BOT_TOKEN=

# Chat-IDs für Benachrichtigungen (kommagetrennt)
# Persönliche ID: positive Zahl (z.B. 123456789)
# Gruppen-ID: negative Zahl (z.B. -100987654321)
WATCHDOG_TELEGRAM_CHAT_IDS=

# Telegram aktivieren/deaktivieren
WATCHDOG_TELEGRAM_ENABLED=true

# -------------------------------------------
# MONITORING KONFIGURATION
# -------------------------------------------
# Intervall zwischen Health-Checks (Sekunden)
WATCHDOG_CHECK_INTERVAL_SECONDS=30

# Timeout für einzelne Health-Checks (Sekunden)
WATCHDOG_TIMEOUT_SECONDS=10

# -------------------------------------------
# ALERT KONFIGURATION
# -------------------------------------------
# Cooldown zwischen Alerts für denselben Service (Minuten)
WATCHDOG_ALERT_COOLDOWN_MINUTES=15

# Bei Wiederherstellung eines Services benachrichtigen
WATCHDOG_ALERT_ON_RECOVERY=true

# Kritikalitätsstufen für Alarmierung
WATCHDOG_ALERT_ON_CRITICAL=true
WATCHDOG_ALERT_ON_HIGH=true
WATCHDOG_ALERT_ON_MEDIUM=false

# -------------------------------------------
# TÄGLICHE ZUSAMMENFASSUNG
# -------------------------------------------
WATCHDOG_DAILY_SUMMARY_ENABLED=true
WATCHDOG_DAILY_SUMMARY_HOUR=8
