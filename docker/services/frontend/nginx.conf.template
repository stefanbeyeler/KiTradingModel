user nginx;
worker_processes auto;
error_log /var/log/nginx/error.log warn;
pid /var/run/nginx.pid;

events {
    worker_connections 1024;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';

    access_log /var/log/nginx/access.log main;

    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml+rss application/json;

    # Upstream services - ports from environment variables
    upstream nhits-backend {
        server trading-nhits:${NHITS_SERVICE_PORT};
    }

    upstream llm-backend {
        server trading-llm:${LLM_SERVICE_PORT};
    }

    upstream data-backend {
        server trading-data:${DATA_SERVICE_PORT};
    }

    upstream rag-backend {
        server trading-rag:${RAG_SERVICE_PORT};
    }

    upstream easyinsight-backend {
        server 10.1.19.102:3000;
    }

    upstream tcn-backend {
        server trading-tcn:${TCN_SERVICE_PORT};
    }

    upstream tcn-train-backend {
        server trading-tcn-train:3013;
    }

    upstream candlestick-backend {
        server trading-candlestick:${CANDLESTICK_SERVICE_PORT};
    }

    upstream candlestick-train-backend {
        server trading-candlestick-train:3016;
    }

    upstream hmm-backend {
        server trading-hmm:${HMM_SERVICE_PORT};
    }

    # Note: nhits-train and hmm-train use dynamic resolver in location blocks
    # to avoid nginx startup failures when training containers are not running

    upstream embedder-backend {
        server trading-embedder:${EMBEDDER_SERVICE_PORT};
    }

    server {
        listen 80;
        server_name localhost;

        # Increase body size for large requests
        client_max_body_size 10M;

        # Root for static files
        root /usr/share/nginx/html;
        index index.html;

        # Frontend - Static Files
        location / {
            try_files $uri $uri/ /index.html;
        }

        # Disable caching for HTML files to ensure latest version
        location ~* \.html$ {
            add_header Cache-Control "no-cache, no-store, must-revalidate";
            add_header Pragma "no-cache";
            add_header Expires "0";
        }

        # =====================================================
        # Direct Service Access (for Dashboard)
        # =====================================================

        # NHITS Service - Direct Access
        location /nhits/ {
            proxy_pass http://nhits-backend/;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
            proxy_read_timeout 300s;
            proxy_connect_timeout 75s;
        }

        # LLM Service - Direct Access
        location /llm/ {
            proxy_pass http://llm-backend/;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
            proxy_read_timeout 300s;
        }

        # Data Service - Direct Access
        # Uses dynamic resolver for DNS refresh after container rebuilds
        location /data/ {
            resolver 127.0.0.11 valid=10s ipv6=off;
            set $data_upstream trading-data:${DATA_SERVICE_PORT};
            rewrite ^/data/(.*)$ /$1 break;
            proxy_pass http://$data_upstream;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
            proxy_read_timeout 300s;
            proxy_connect_timeout 5s;
        }

        # RAG Service - Direct Access
        location /rag/ {
            proxy_pass http://rag-backend/;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
            proxy_read_timeout 300s;
        }

        # TCN-Pattern Service - Direct Access (Inference)
        location /tcn/ {
            proxy_pass http://tcn-backend/;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
            proxy_read_timeout 300s;
        }

        # TCN-Training Service - Direct Access (Training)
        location /tcn-train/ {
            proxy_pass http://tcn-train-backend/;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
            proxy_read_timeout 600s;  # Long timeout for training requests
        }

        # Candlestick Pattern Service - Direct Access (Inference)
        # Uses dynamic resolver for DNS refresh after container rebuilds
        location /candlestick/ {
            resolver 127.0.0.11 valid=10s ipv6=off;
            set $candlestick_upstream trading-candlestick:${CANDLESTICK_SERVICE_PORT};
            rewrite ^/candlestick/(.*)$ /$1 break;
            proxy_pass http://$candlestick_upstream;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
            proxy_read_timeout 300s;
            proxy_connect_timeout 5s;
        }

        # Candlestick Training Service - Direct Access (Training)
        location /candlestick-train/ {
            proxy_pass http://candlestick-train-backend/;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
            proxy_read_timeout 600s;  # Long timeout for training requests
        }

        # NHITS-Training Service - Direct Access (Training)
        # Uses dynamic resolver to allow nginx start without the training container
        location /nhits-train/ {
            resolver 127.0.0.11 valid=10s ipv6=off;
            set $nhits_train_upstream trading-nhits-train:3012;
            rewrite ^/nhits-train/(.*)$ /$1 break;
            proxy_pass http://$nhits_train_upstream;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
            proxy_read_timeout 600s;
            proxy_connect_timeout 5s;
        }

        # HMM-Training Service - Direct Access (Training)
        # Uses dynamic resolver to allow nginx start without the training container
        location /hmm-train/ {
            resolver 127.0.0.11 valid=10s ipv6=off;
            set $hmm_train_upstream trading-hmm-train:3014;
            rewrite ^/hmm-train/(.*)$ /$1 break;
            proxy_pass http://$hmm_train_upstream;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
            proxy_read_timeout 600s;
            proxy_connect_timeout 5s;
        }

        # CNN-LSTM Multi-Task Service - Direct Access (Inference)
        location /cnn-lstm/ {
            resolver 127.0.0.11 valid=10s ipv6=off;
            set $cnn_lstm_upstream trading-cnn-lstm:3007;
            rewrite ^/cnn-lstm/(.*)$ /$1 break;
            proxy_pass http://$cnn_lstm_upstream;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
            proxy_read_timeout 300s;
            proxy_connect_timeout 5s;
        }

        # CNN-LSTM Training Service - Direct Access (Training)
        location /cnn-lstm-train/ {
            resolver 127.0.0.11 valid=10s ipv6=off;
            set $cnn_lstm_train_upstream trading-cnn-lstm-train:3017;
            rewrite ^/cnn-lstm-train/(.*)$ /$1 break;
            proxy_pass http://$cnn_lstm_train_upstream;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
            proxy_read_timeout 600s;
            proxy_connect_timeout 5s;
        }

        # HMM-Regime Service - Direct Access
        location /hmm/ {
            proxy_pass http://hmm-backend/;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
            proxy_read_timeout 300s;
        }

        # Embedder Service - Direct Access
        location /embedder/ {
            proxy_pass http://embedder-backend/;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
            proxy_read_timeout 300s;
        }

        # Watchdog Service - Direct Access (uses resolver for dynamic DNS)
        location /watchdog/ {
            resolver 127.0.0.11 valid=10s ipv6=off;
            set $watchdog_upstream trading-watchdog:${WATCHDOG_SERVICE_PORT};
            rewrite ^/watchdog/(.*)$ /$1 break;
            proxy_pass http://$watchdog_upstream;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
            proxy_read_timeout 300s;
            proxy_connect_timeout 5s;
        }

        # Trading Workplace Service - Direct Access
        # Setup aggregation and multi-signal scoring
        location /workplace/ {
            resolver 127.0.0.11 valid=10s ipv6=off;
            set $workplace_upstream trading-workplace:3020;
            rewrite ^/workplace/(.*)$ /$1 break;
            proxy_pass http://$workplace_upstream;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
            proxy_read_timeout 300s;
            proxy_connect_timeout 5s;
        }

        # =====================================================
        # API Gateway Routes
        # =====================================================

        # NHITS Service
        location /api/v1/forecast/ {
            proxy_pass http://nhits-backend/api/v1/forecast/;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
            proxy_read_timeout 300s;
            proxy_connect_timeout 75s;
        }

        # LLM Service
        location /api/v1/analyze {
            proxy_pass http://llm-backend/api/v1/analyze;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
            proxy_read_timeout 300s;
        }

        location /api/v1/llm/ {
            proxy_pass http://llm-backend/api/v1/llm/;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
        }

        # RAG Service
        location /api/v1/rag/ {
            proxy_pass http://rag-backend/api/v1/rag/;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
        }

        # TCN-Pattern Service (Port 3003)
        location /api/v1/patterns/ {
            proxy_pass http://tcn-backend/api/v1/patterns/;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
        }

        # HMM-Regime Service (Port 3004)
        location /api/v1/regime/ {
            proxy_pass http://hmm-backend/api/v1/regime/;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
        }

        location /api/v1/signals/ {
            proxy_pass http://hmm-backend/api/v1/signals/;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
        }

        # Embedder Service (Port 3005)
        location /api/v1/embeddings/ {
            proxy_pass http://embedder-backend/api/v1/embeddings/;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
        }

        # Candlestick Pattern Service (Port 3006)
        # Uses dynamic resolver for DNS refresh after container rebuilds
        location /api/v1/candlestick/ {
            resolver 127.0.0.11 valid=10s ipv6=off;
            set $candlestick_api_upstream trading-candlestick:${CANDLESTICK_SERVICE_PORT};
            rewrite ^/api/v1/candlestick/(.*)$ /api/v1/$1 break;
            proxy_pass http://$candlestick_api_upstream;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
            proxy_connect_timeout 5s;
        }

        location /api/v1/recommendation/ {
            proxy_pass http://llm-backend/api/v1/recommendation/;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
        }

        # Data Service
        location /api/v1/symbols {
            proxy_pass http://data-backend/api/v1/symbols;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        # Managed Symbols - use regex to preserve encoded slashes in symbol IDs
        location ~ ^/api/v1/managed-symbols(/.*)?$ {
            proxy_pass http://data-backend$request_uri;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        location /api/v1/strategies {
            proxy_pass http://data-backend/api/v1/strategies;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
        }

        location /api/v1/sync/ {
            proxy_pass http://data-backend/api/v1/sync/;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
        }

        location /api/v1/query-logs {
            proxy_pass http://data-backend/api/v1/query-logs;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
        }

        location /api/v1/health {
            proxy_pass http://data-backend/api/v1/health;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
        }

        location /api/v1/system/ {
            proxy_pass http://data-backend/api/v1/system/;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
        }

        location /api/v1/version {
            proxy_pass http://data-backend/api/v1/version;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
        }

        # Swagger Documentation - Default redirect
        location = /docs {
            return 301 /nhits/docs;
        }

        # Health check endpoint
        location /health {
            access_log off;
            return 200 "healthy\n";
            add_header Content-Type text/plain;
        }

        # =====================================================
        # EasyInsight API Proxy (External Data Source)
        # =====================================================
        location /easyinsight/ {
            proxy_pass http://easyinsight-backend/;
            proxy_http_version 1.1;
            proxy_set_header Host 10.1.19.102:3000;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_connect_timeout 10s;
            proxy_read_timeout 30s;
        }
    }
}
